{% extends 'base.html.twig' %}

{% block body %}
  <div class="layout-content">
    <div class="layout-content-body">
      <div class="title-bar">
        <h1 class="title-bar-title">
          <span class="d-ib">Tableau de bord</span>
        </h1>
      </div>
      <div class="row gutter-xs">
        <div class="col-md-6 col-lg-3 col-lg-push-0">
          <div class="card">
            <div class="card-body">
              <div class="media">
                <div class="media-middle media-left">
                  <span class="bg-primary circle sq-48">
                    <span class="icon icon-file-pdf-o"></span>
                  </span>
                </div>
                <div class="media-middle media-body">
                  <h6 class="media-heading">PDF</h6>
                  <h3 class="media-heading">
                    <span class="fw-l">{{ render(url('statistique_nombre_type_document', {'type': 'pdf'}))}}</span>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-push-3">
          <div class="card">
            <div class="card-body">
              <div class="media">
                <div class="media-middle media-left">
                  <span class="bg-primary circle sq-48">
                    <span class="icon icon-file-word-o"></span>
                  </span>
                </div>
                <div class="media-middle media-body">
                  <h6 class="media-heading">Word</h6>
                  <h3 class="media-heading">
                    <span class="fw-l">{{ render(url('statistique_nombre_type_document', {'type': 'doc'}))}}</span>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-pull-3">
          <div class="card">
            <div class="card-body">
              <div class="media">
                <div class="media-middle media-left">
                  <span class="bg-primary circle sq-48">
                    <span class="icon icon-file-excel-o"></span>
                  </span>
                </div>
                <div class="media-middle media-body">
                  <h6 class="media-heading">Excel</h6>
                  <h3 class="media-heading">
                    <span class="fw-l">{{ render(url('statistique_nombre_type_document', {'type': 'xsl'}))}}</span>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-pull-0">
          <div class="card">
            <div class="card-body">
              <div class="media">
                <div class="media-middle media-left">
                  <span class="bg-primary circle sq-48">
                    <span class="icon icon-file-image-o"></span>
                  </span>
                </div>
                <div class="media-middle media-body">
                  <h6 class="media-heading">Images et divers</h6>
                  <h3 class="media-heading">
                    <span class="fw-l">{{ render(url('statistique_nombre_type_document', {'type': 'g'}))}}</span>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row gutter-xs">
        {{ render(url('accueil_services'))}}     
      </div>
    </div>
  </div>
{% endblock %}
