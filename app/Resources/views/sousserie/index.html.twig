{% extends 'base.html.twig' %}

{% block title %} Sous-serie {% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('ressources/css/demo.min.css')}}">
{% endblock %}

{% block body %}

  <div class="layout-content">
    <div class="layout-content-body">
      <div class="title-bar">
        <h1 class="title-bar-title">
          <span class="d-ib">Gestion des sous-series</span>
        </h1>
      </div><br>
      <!-- Enregistrement -->
      <div class="row p-y-lg">
        <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
          {{ form_start(form, { 'attr': {'data-toggle': 'md-validator' }}) }}
            <div class="row">
              <div class="col-sm-6 col-md-6">
                <div class="md-form-group md-label-floating">
                  {{ form_widget(form.serie) }}
                  {{ form_errors(form.serie) }}
                  <label class="md-control-label">Série</label>
                  <small class="md-help-block">Nom de la série</small>
                </div>
              </div>
              <div class="col-sm-6 col-md-6">
                <div class="md-form-group md-label-floating">
                  {{ form_widget(form.nom) }}
                  {{ form_errors(form.nom) }}
                  <label class="md-control-label">Sous-série</label>
                  <small class="md-help-block">Nom de la Sous-série</small>
                </div>
              </div>
              <div class="col-sm-6 col-md-6">
                <div class="md-form-group md-label-floating">
                  {{ form_widget(form.designation) }}
                  {{ form_errors(form.designation) }}
                  <label class="md-control-label">Désignation</label>
                  <small class="md-help-block">La description de la serie</small>
                </div>
              </div>
            </div><br><br>
            <div class="row">
              <div class="col-sm-4 col-md-3 col-sm-offset-4 col-md-offset-6">
                {{ form_rest(form)}}
                <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
              </div>
              <div class="col-sm-4 col-md-3">
                <button type="reset" class="btn btn-default btn-block">Annuler</button>
              </div>
            </div>
          {{ form_end(form)}}
        </div>
      </div>
      <!-- \Enregistrement -->
      <br>
      <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
          {% if flash_message %}
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
              <div class="alert alert-success alert-dismissible fade in">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                <a href="#" class="alert-link">NOTIFICATION :</a> {{ flash_message }}
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}
        <!-- \Message -->
        <br>
      <!-- Tableau -->
      <div class="row gutter-xs">
        <div class="col-xs-12">
          <div class="card">
            <div class="card-header">
              <div class="card-actions">
                <button type="button" class="card-action card-toggler"></button>
                <button type="button" class="card-action card-reload"></button>
                <button type="button" class="card-action card-remove"></button>
              </div>
              <h5 class="m-b-0 text-center">LISTE DES SERIES</h5>
            </div>
            <div class="card-body">
              <div class="card-body">
                <table id="demo-datatables-buttons-2" class="table table-bordered table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th class="text-center">ID</th>
                      <th class="text-center">Série</th>
                      <th class="text-center">Sous série</th>
                      <th class="text-center">Description</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for sousserie in sousseries %}
                    <tr>
                      <td class="text-right">{{ loop.index }}</td>
                      <td class="text-center">{{ sousserie.serie }}</td>
                      <td class="text-center">{{ sousserie.nom }}</td>
                      <td>{{ sousserie.designation|title }}</td>
                      <td class="text-center">
                        <a href="{{ path('sousserie_edit', {'slug': sousserie.slug})}}" title="Modifier la sousserie {{ sousserie.nom|title }}">
                          <span class="icon icon-edit"></span>
                        </a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- \Tableau -->
    </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('ressources/js/demo.min.js')}}"></script>
{% endblock %}
